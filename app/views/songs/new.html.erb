<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>

  <%= f.label :artist_name %><br>
  <%= f.text_field :artist_name %><br>

  <%= f.label :genre %><br>
  <%= f.collection_select :genre_id, @genres, :id, :name %><br>

  <textarea name="song[note_contents][]" id="song_notes_1" cols="30" rows="10"></textarea>
  <textarea name="song[note_contents][]" id="song_notes_2" cols="30" rows="10"></textarea>
  <textarea name="song[note_contents][]" id="song_notes_3" cols="30" rows="10"></textarea>

  <%= f.submit %>
<% end %>


